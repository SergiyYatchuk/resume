


<header>
    {{#with navigation}}
        <div class='row'>
        <div class='col'>
            <div class='card'>
            <div class='card-body d-flex justify-content-between'>
                <h1>{{Logo}}</h1>
                <div class='nav d-flex align-items-center'>
                {{#each links}}
                    <div class='nav-item'>
                        <a class='nav-link {{#if @last}}disabled{{/if}}' href='{{href}}'>{{text}}</a>
                    </div>
                {{/each}}
                </div>
            </div>
            </div>
        </div>
        </div>
    {{/with}}
</header>


{{#with navigation}}
  <div class='card m-3' style='overflow:hidden;'>
    <div class='row'>
      <div class='col-9'>
        <h1 class='ps-4 pb-2'>{{Logo}}</h1>
      </div>
      <div class='col-3 text-end pt-2'>
        <ul class='nav text-inline'>
          {{#each links}}
            {{#if href}}
              <li class='nav-item px-3'><a
                  class='nav-link'
                  href='{{href}}'
                >{{text}}</a></li>
            {{else}}
              <li class='nav-item px-3'><a
                  class='nav-link disabled'
                >{{text}}</a></li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

{{/with}}

{{/with}}

