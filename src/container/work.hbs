{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      {{#with main}}
        <main>
          <section>
            {{> title big=true data= 'Work history' }}
            <div>
              <ul class="list-group">
                {{#each works}}
                  <li class="list-group-item">
                    <div><strong>{{position}}</strong></div>
                    <div>
                      {{duration.from}} - 
                      {{#if duration.to}} 
                        {{duration.to}} 
                      {{else}} 
                        (досі працюємо) 
                      {{/if}}
                    </div>
                    <div>
                      {{#if company.url}}
                        {{> link text=company.name href=company.url blank=true noLine=true }}
                      {{else}}
                        <b>{{company.name}}</b>
                      {{/if}}
                    </div>
                    <div>
                      <strong>Projects ({{projectAmount}})</strong>
                    </div>
                    <ul class="list-group">
                      {{#each projects}}
                        <li class="list-group-item">
                          <div>{{> link text=name href=url blank=true noLine=true }}</div>
                          <div>
                            <p>{{about}}</p>
                          </div>
                          <div>
                            <em>Project stacks ({{stackAmount}})</em>
                          </div>
                          <ul class="list-group">
                            {{#each stacks}}
                              <li class="list-group-item">{{name}}</li>
                            {{/each}}
                          </ul>
                          <div>
                            <em>Project awards ({{awardAmount}})</em>
                          </div>
                          <ul class="list-group">
                            {{#each awards}}
                              <li class="list-group-item">{{name}}</li>
                            {{/each}}
                          </ul>
                        </li>
                      {{/each}}
                    </ul>
                  </li>
                  <br>
                {{/each}}
              </ul>
            </div>
          </section>
        </main>
      {{/with}}
    </div>
  </div>
</div> 


