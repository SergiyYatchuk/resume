<main>
    <section class="py-5">
        {{#with newsBlock}}
            <h2 class="text-center mb-4">{{title}}</h2>
            {{> shoppost}}
        {{/with}}
    </section>
    <hr>    
    <section class="py-5">
        {{#with goodsBlock}}
            <ul class="nav nav-tabs mb-6">
                {{#each tabs}}
                    <li class="nav-item">
                        <a class="nav-link {{#if isActive}}fw-semibold active{{/if}} {{#if isDisabled}}disabled{{/if}}" href="#">{{text}}</a>
                    </li>
                {{/each}}
            </ul>
            {{> shopcard}}            
        {{/with}}
    </section>
    <hr>    
    <section class="py-5">
        {{#with subscribe}}
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body text-bg-dark d-flex justify-content-between">
                            <div>
                                <h2>{{header}}</h2>
                                <p>{{description}}</p>
                            </div>
                            <div class=" d-flex align-items-center">
                                {{#each buttons}}
                                    <span class="mx-1">{{> btn-prim}}</span>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/with}}
    </section>
    <hr>    
    {{> shopaction}}
    <hr>    
</main>