{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      {{#with main}}
      <main>
        {{#with summary}}
        <section class="mb-5">
          {{> title big=true data=title}}
          <div class="card p-3">
            <p class="card-text">{{text}}</p>
          </div>
        </section>
        {{/with}}
        {{#with experience}}
    <section>
      {{> title big=false data=title}}
      <div class="card p-3">
        <p class="card-text">{{text}}</p>
      </div>
    </section>
    {{/with}}
  </main>
  {{/with}}
</div>
</div>
</div>

