<div>
     {{#with main}}
        <main>
            {{> title big=true data='My education'}}
            <section>
                <ul class="ps-5">
                    {{#each educations}}
                      <li>
                        {{name}}
                        {{#unless isEnd}} (ще в процесі) {{/unless}}
                       </li>
                    {{/each}} 
                </ul>
            </section>

            {{> title big=false data='My certificates'}}
            <section>
                <ul class="ps-5">
                     {{#each certificates}}
                     <li>
                         {{name}} ({{id}})
                     </li>
                     {{/each}}
                </ul>
            </section>
        </main>
    {{/with}}
</div>